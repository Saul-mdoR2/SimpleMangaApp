<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Capitulo">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCapitulo"
        style="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:alpha="0.50"
        android:background="@color/black"
        android:elevation="4dp"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPagina"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:contentDescription="@string/description_chapter_manga" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/celeste"
        android:orientation="horizontal">


        <Spinner
            android:id="@+id/listChapters"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:textAlignment="center"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/listPages"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPaginaActual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingStart="1dp"
            android:paddingEnd="5dp"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>